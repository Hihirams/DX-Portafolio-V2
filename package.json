{
  "name": "portfolio-dx",
  "version": "1.0.0",
  "description": "Portafolio Web DX - Sistema de gesti√≥n de proyectos",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build:portable": "mkdir .cache && set ELECTRON_BUILDER_CACHE=%cd%\\.cache && electron-builder --win portable --x64"
  },
  "author": "DX Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.dx.portfolio",
    "productName": "PortfolioDX",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "portable": {
      "artifactName": "${productName}-Portable.exe"
    },
    "win": {
      "target": "portable",
      "icon": "assets/logo-dx.ico",
      "signAndEditExecutable": false
    },
    "asar": true,
    "files": [
      "electron-main.js",
      "preload.js",
      "index.html",
      "portfolio-editor.html",
      "portfolio-viewer.html",
      "project-manager.html",
      "js/**/*",
      "css/**/*",
      "!**/{.cache,.git,dist,node_modules}",
      "!**/*.{bat,py,md,txt,yaml,yml}",
      "!**/users/**",
      "!**/data/**",
      "!**/assets/**",
      "!**/DatosAct/**",
      "!**/FeaturePages/**",
      "!**/{pnpm-lock.yaml,pnpm-workspace.yaml}",
      "!**/{diagnostic-*.js,diagnostic-*.txt}",
      "!**/{add-kpis-to-projects.js,test-*.js,fix-*.bat}",
      "!**/config.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*",
          "!Thumbs.db"
        ]
      }
    ]
  }
}